{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Orchestrator Configuration Schema",
  "description": "Schema for .orchestrator.json, project-rules.json, and bugs.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file"
    },
    "rulesFile": {
      "type": "string",
      "description": "Path to project-rules.json file"
    },
    "bugsFile": {
      "type": "string",
      "description": "Path to bugs.json file"
    },
    "ui": {
      "type": "object",
      "description": "UI configuration",
      "properties": {
        "enableRoutes": {
          "type": "boolean"
        },
        "nextAppDir": {
          "type": "string"
        },
        "expressServerFile": {
          "type": "string"
        }
      }
    },
    "cursor": {
      "type": "object",
      "description": "Cursor settings management",
      "properties": {
        "manageCursorRules": {
          "type": "boolean"
        },
        "autoApprovePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "packages": {
      "type": "object",
      "description": "Local package paths",
      "additionalProperties": {
        "type": "string"
      }
    },
    "features": {
      "type": "object",
      "description": "Feature flags",
      "properties": {
        "bugs": {
          "type": "boolean"
        },
        "jiraIntegration": {
          "type": "boolean"
        },
        "uiBuilder": {
          "type": "boolean"
        },
        "routeGeneration": {
          "type": "boolean"
        }
      }
    },
    "bugs": {
      "type": "array",
      "description": "Bug entries",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["open", "in_progress", "resolved", "closed"]
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "area": {
            "type": "string"
          },
          "file": {
            "type": "string"
          },
          "jiraKey": {
            "type": ["string", "null"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "title", "status", "severity"]
      }
    }
  }
}

